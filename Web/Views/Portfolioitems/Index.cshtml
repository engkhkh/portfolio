@model IEnumerable<Core.Entities.portfolioitem>

<div style="padding:120px;">
    <h1>Index</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New </a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(Model => Model.ProjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(Model => Model.vedioUrl)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProjectName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <img src="~/img/portfolio/@item.ImageUrl" class="img-thumbnail" />
                    </td>
                    <td>
                        <video src="~/img/portfolio/@item.vedioUrl" class="img-thumbnail" ></video>
                    </td>
                    <td>

                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>|
                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a>|
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>|

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


